pipeline {
    agent any
    stages {
        stage('Clone Repo') {
            steps {
                echo 'Cloning the repository..'
                git branch: 'master', url: 'https://github.com/byfepo/PRUEBAG01.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the app..'
                bat 'npm install' // Ensure dependencies are installed
            }
        }

//que onda tanto espacio aca?

        stage('StartApp') {
            steps {
                echo 'Starting the app..'
                script {
                    // Execute App server
                    bat 'nohup node index.js > server.log 2>&1 &' // Ensure dependencies are installed
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    try {
                        echo 'Ejecutando pruebas...'
                        bat 'npm test'
                    } catch (Exception e) {
                        error('❌ Error en la etapa de Test')
                    }
                }
            }
        }
    }
}
